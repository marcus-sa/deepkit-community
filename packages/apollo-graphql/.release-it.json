{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "refactor",
            "section": "Refactor"
          },
          {
            "type": "docs",
            "section": "Documentations"
          }
        ]
      },
      "infile": "packages/apollo-graphql/CHANGELOG.md",
      "parserOpts": {
        "headerPattern": "^(\\w*)(?:\\((apollo-graphql*)\\))?\\: (.*)$"
      }
    },
    "@release-it/bumper": {
      "in": "packages/apollo-graphql/version.json",
      "out": [
        "packages/apollo-graphql/version.json",
        "dist/packages/apollo-graphql/package.json"
      ]
    }
  },
  "git": {
    "commitMessage": "chore(apollo-graphql): release ${version}",
    "tagName": "apollo-graphql-v${version}",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "Release: apollo-graphql ${version}"
  },
  "hooks": {
    "before:bump": "pnpm nx build apollo-graphql",
    "after:bump": ["git checkout -- package.json"]
  }
}
