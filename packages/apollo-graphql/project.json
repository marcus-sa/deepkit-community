{
  "name": "apollo-graphql",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/apollo-graphql/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/apollo-graphql",
        "tsConfig": "packages/apollo-graphql/tsconfig.lib.json",
        "packageJson": "packages/apollo-graphql/package.json",
        "main": "packages/apollo-graphql/src/index.ts",
        "assets": ["packages/apollo-graphql/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs apollo-graphql-driver {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/apollo-graphql/**/*.ts",
          "packages/apollo-graphql/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/apollo-graphql/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["graphql"]
}
